<h2> Welcome to Pizza Shop !</h2>
<br>
<br>

<div class = 'row'>


  <% @products.each do |p| %>
    <div class = 'col-md-4'>
      <center>
        <div>
          <b>
            <%= p.title %>
          </b>
        </div>

        <div>
          <img src = "<%= p.path_to_image%>" />
        </div>

        <div>
          <%= p.description %>
        </div>

        <div>
          Size: <%= p.size %> cm
        </div>

        <div>
          Price: <%= p.price %> rub
        </div>

        <div>
          <button class = "btn btn-success btn-xs" onclick="add_to_cart(<%= p.id%>)">Add to cart</button>
        </div>

      </center>

    </div>
  <% end %>

</div>

<button class="btn btn-primary" onclick="something()">Click me</button>
